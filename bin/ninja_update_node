#!/bin/bash
# Define directories
code_dir=/opt/ninja
util_dir=/opt/utilities
tmp_dir=$util_dir/tmp
if [ -f $tmp_dir/.has_updated_node ]; then
	exit 1
fi
touch $tmp_dir/.has_updated_node
# Pull new code from repo
cd $tmp_dir
wget https://s3.amazonaws.com/ninjablocks/code/beagle/node/$NINJA_ENV.tar.gz
remote_checksum=$(wget https://s3.amazonaws.com/ninjablocks/code/beagle/node/$NINJA_ENV.checksum -q -O - | awk '{ print $1 }')
local_checksum=$(md5sum $NINJA_ENV.tar.gz | awk '{ print $1 }')
if [ "$remote_checksum"="$local_checksum" ]; then
	echo "Updating"
	tar -zxf $NINJA_ENV.tar.gz
	rm -rf $code_dir/*
	mv -f ninja/* $code_dir/
	rm $NINJA_ENV.tar.gz
	rm -rf ninja
	exit 0
else
	echo "Invalid Checksum"
	rm $NINJA_ENV.tar.gz
	exit 1
fi