#!/bin/bash

echo "### REMOVING ALL LOG FILES AND RUNNING CONFIGURATION ###"

read -p "Are you sure? " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
  
  # clear out uneeded files
  rm /etc/init/ureadahead.conf
  rm /etc/init/ureadahead-other.conf
  rm /etc/opt/ninja/serial.conf
  rm /etc/opt/ninja/token.conf
  rm -rf /opt/ninja/config/*
  sed -i '/NAME="wlan/d' /etc/udev/rules.d/70-persistent-net.rules
  sed -i '/USB device/d' /etc/udev/rules.d/70-persistent-net.rules
  
  # clear out stale apt cache
  apt-get clean all
  
  # find and remove bash histor files.
  find / -name .bash_history | xargs rm
  history -c

else

   # OK so lets quit
   exit 1

fi
