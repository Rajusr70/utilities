#!/bin/bash


if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

username="pi"

 echo "[`date -u +%Y-%m-%dT%T.%3NZ`] [System] Starting" >> /var/log/ninjablock.log
    if [ -f /etc/environment.local ]; then
        . /etc/environment.local
    fi
    
    util_dir=/opt/utilities
    bin_dir=$util_dir/bin

    sudo echo "pi ALL=NOPASSWD: /sbin/ifconfig, /sbin/iwlist" > /etc/sudoers.d/ninja
    sudo chmod 0440 /etc/sudoers.d/ninja
    sudo chown -R $username:$username /opt/ninja
    sudo chown $username:$username /opt/utilities/tmp
    sudo chown $username:$username /var/log/ninjablock.log
    sudo chown $username:$username /etc/opt/ninja


exec su $username -c "/usr/local/bin/forever /opt/ninja/beagle.js >> /var/log/ninjablock.log 2>&1" &
echo $$ > /var/run/ninjablock.pid
