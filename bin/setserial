#!/usr/bin/env ruby

if  Process.uid != 0
	puts "setserial must be run as root"
	exit 0
end
DDR_IN  = (1 << 5)
DDR_OUT = (0 << 5)
PULL_R_UP       = (1 << 4)
PULL_R_DOWN     = (0 << 4)
PULL_R_EN       = (1 << 3)
PULL_R_DIS      = (0 << 3)

   uart1_pin_mux = { 'uart1_rxd' => (0 | DDR_IN), 'uart1_txd' => (0)}

   uart1_pin_mux.each do |fname,mode|
     print "#{fname} = #{mode}\n"
     open("/sys/kernel/debug/omap_mux/#{fname}", 'wb') do |f|
       printf(f, "%X", mode)
     end
   end
