#!/bin/bash
code_dir=/opt/ninja
util_dir=/opt/utilities
tmp_dir=$util_dir/tmp
bin_dir=$util_dir/bin
service ninjablock stop
if [ ! -f $tmp_dir/.has_updated_arduino ]; then
	$bin_dir/ninja_update_arduino
	touch $tmp_dir/.has_updated_arduino
fi
if [ ! -f $tmp_dir/.has_updated_utilities ]; then
	$bin_dir/ninja_update_utilities
	touch $tmp_dir/.has_updated_utilities
fi
if [ ! -f $tmp_dir/.has_updated_system ]; then
	$bin_dir/ninja_update_system
	touch $tmp_dir/.has_updated_system
fi
service ninjablock start
